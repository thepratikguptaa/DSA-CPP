{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ file to build folder",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task to compile C++ files to build folder."
        }
    ]
}
